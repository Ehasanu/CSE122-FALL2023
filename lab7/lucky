
#include<bits/stdc++.h>
using namespace std;
int main()
{
    long long a;
    int cont=0;
    cin>>a;
    string s = to_string(a);
    for(int i=0;i<s.size();i++)
    {
        if(s[i] == '7'|| s[i] =='4')
        {
             cont++;
        }
    }
    if(cont==7||cont==4)
    {
        cout<<"YES"<<endl;
    }
    else
    {
        cout<<"NO"<<endl;
    }
    return 0;
}
